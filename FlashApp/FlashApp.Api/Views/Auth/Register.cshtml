@model FlashApp.Api.Models.RegisterDTO;
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
<link href="~/css/AuthenticationStyles.css" rel="stylesheet" />

<div class="register-container">
    <div class="error-message">@ViewBag.Error</div>
    <form class="register" method="post" asp-controller="Auth" asp-action="Register">
        <div class="form-group">
            <label asp-for="Username">Username: <span class="field-validation-error">@Html.ValidationMessageFor(model => model.Username)</span></label>
            <input asp-for="Username" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Nickname">Nickname (optional): </label>
            <input asp-for="Nickname" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Email">Email (optional): </label>
            <input asp-for="Email" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Password: <span class="field-validation-error">@Html.ValidationMessageFor(model => model.Password)</span></label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Sign up</button>
        <div style="margin-top: 10px; font-size: 70%;">Already have an account?<a href="https://localhost:7270/login">Login</a></div>
    </form>
</div>
