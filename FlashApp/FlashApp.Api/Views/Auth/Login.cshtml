@model FlashApp.Api.Models.LoginModel
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<link href="~/css/AuthenticationStyles.css" rel="stylesheet" />

<div class="login-container">
    <div class="error-message">@ViewBag.Error</div>
    <form method="post" asp-controller="Auth" asp-action="Login">
        <div class="form-group">
            <label asp-for="Username">Username: <span class="field-validation-error">@Html.ValidationMessageFor(model => model.Username)</span></label>
            <input asp-for="Username" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Password">Password: <span class="field-validation-error">@Html.ValidationMessageFor(model => model.Password)</span></label>
            <input asp-for="Password" type="password" class="form-control" />
        </div>
        <button type="submit" class="btn btn-primary">Sign in</button>
        <div style="margin-top: 10px; font-size: 70%;">New to FlashApp?<a href="https://localhost:7270/register">Create an account</a></div>
    </form>
</div>